<h2> Set up Home Team </h2>

<p>
    <%= form_for :home_player do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %><br />
    <%= f.label :position %>:
    <%= f.select :position, options_for_select(["C", "1B", "2B", "3B", "SS", "RF", "LF", "CF", "DH"]) %><br/>
    <%= f.label :batting_avg %>:
    <%= f.text_field :batting_avg %><br/>
    <%= f.submit %>
    <% end %>
</p>
<p>Or <%= link_to 'Proceed to Away Players!', add_away_player_path(@game) %> </p>